{
   "compilerOptions": {
       "module": "commonjs",
       "esModuleInterop": true,
       "target": "es6",
       "noImplicitAny": true,
       "moduleResolution": "node",
       "resolveJsonModule": true,
       "sourceMap": true,
       "outDir": "dist",
       "baseUrl": ".",
       "lib": [
            "es5", "es6", "dom", "dom.iterable"
        ],     
       "paths": {
           "*": [
               "node_modules/",
               "types/*"
           ]
       }
   },
   "include": [
       "src/**/*",
        "tests/**/*"
    ]
}
